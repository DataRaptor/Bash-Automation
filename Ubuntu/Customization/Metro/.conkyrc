conky.config = {
  background = false,
update_interval = 1,

double_buffer = true,
no_buffers = true,
text_buffer_size = 2048,

gap_x = 105,
gap_y = 14,

own_window = true,
own_window_type = 'dock',

own_window_argb_visual = true,
own_window_transparent = true,

own_window_class = 'conky',
own_window_hints = 'undecorated,sticky,skip_taskbar,skip_pager,below',
border_inner_margin = 0,
border_outer_margin = 0,

-- EDIT THIS TO CHANGE POSITION
alignment = 'bottom_left',

draw_shades = false,
draw_outline = false,
draw_borders = false,
draw_graph_borders = false,

override_utf8_locale = true,
use_xft = true,
font = 'Open Sans Light:size=20',
xftalpha = 0,
uppercase = false,

-- Defining colors
default_color = '#FFFFFF',
};

conky.text = [[
${voffset 0}${font Raleway:size=10}${time %A}${font}${voffset -38}
${voffset 0}${font Raleway:size=10}${time %B} ${time %e}${font}${voffset -27}
${voffset 0}${font Open Sans Light:size=25}${time %I:%M %p}${font}${voffset -00}

]];
